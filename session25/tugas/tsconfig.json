{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "sourceMap": false,
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
